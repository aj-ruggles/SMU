<h1>Listing addresses</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>State</th>
      <th>City</th>
      <th>Street</th>
      <th>Zip</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.user_id %></td>
        <td><%= address.state %></td>
        <td><%= address.city %></td>
        <td><%= address.street %></td>
        <td><%= address.zip %></td>
        <td><%= link_to address do %> <span class="glyphicon glyphicon-eye-open"></span> <% end %> </td>
        <td><%= link_to edit_address_path(address) do %><span class="glyphicon glyphicon-pencil"></span> <% end %></td>
        <td><%= link_to address, method: :delete, data: { confirm: 'Are you sure?' } do %><span class="glyphicon glyphicon-remove"></span> <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
