<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="panel panel-warning">
      <div class="panel-heading">Sign up</div>
      <div class="panel-body">
        <form role="form">
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, placeholder: 'example@email.com', class: 'form-control' %></br>
            <%= f.label :first_name %>
            <%= f.text_field :firstname, autocomplete: "off", placeholder: 'First Name', class: 'form-control' %>
            <%= f.label :last_name %>
            <%= f.text_field :lastname, autocomplete: "off", placeholder: 'Last Name', class: 'form-control' %>
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", placeholder: 'password', class: 'form-control' %>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'password confirmation', class: 'form-control' %>
          </div>
          <button name="commit" type="submit" class="btn btn-warning">Sign up</button>
        </form>
      </div>
    </div>
<% end %>
