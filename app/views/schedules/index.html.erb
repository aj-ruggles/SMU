<h1>Listing schedules</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Mon</th>
      <th>Tues</th>
      <th>Wed</th>
      <th>Thur</th>
      <th>Fri</th>
      <th>Sat</th>
      <th>Sun</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.user_id %></td>
        <td><%= schedule.mon %></td>
        <td><%= schedule.tues %></td>
        <td><%= schedule.wed %></td>
        <td><%= schedule.thur %></td>
        <td><%= schedule.fri %></td>
        <td><%= schedule.sat %></td>
        <td><%= schedule.sun %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

