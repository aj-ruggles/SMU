<h1>Listing groups</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Organization</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.organization_id %></td>
        <td><%= group.name %></td>
        <td><%= link_to group do %> <span class="glyphicon glyphicon-eye-open"></span> <% end %> </td>
        <td><%= link_to edit_group_path(group) do %><span class="glyphicon glyphicon-pencil"></span> <% end %></td>
        <td><%= link_to group, method: :delete, data: { confirm: 'Are you sure?' } do %><span class="glyphicon glyphicon-remove"></span> <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>
